# Configuration de base
DEBUG=False
LOG_LEVEL=INFO

# Configuration Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuration Ollama
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_API_KEY=

# Configuration Prometheus
PROMETHEUS_PORT=9090

# Configuration Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Configuration du modèle
MODEL_NAME=gemma3:12b-it-q4_K_M
TEMPERATURE=0.7
MAX_TOKENS=2048

# Configuration de la mémoire
MEMORY_QUANTIZATION=q4_0
MEMORY_EMBEDDING_COMPRESSION=True
CACHE_SIZE=2GB

# Configuration de la surveillance
MONITORING_INTERVAL=5
LOG_FILE_PATH=./logs/polyad.log

# Configuration de la performance
BATCH_SIZE=8
PARALLEL_WORKERS=4
MAX_QUEUE_SIZE=100

