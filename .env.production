# Configuration de production pour Polyad

# Environnement
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=False

# API
API_HOST=0.0.0.0
API_PORT=8000
DASHBOARD_PORT=8001
CORS_ORIGINS=http://localhost:8000,http://localhost:8001
RATE_LIMIT=60

# Base de données
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=polyad
POSTGRES_USER=polyad
POSTGRES_PASSWORD=your-secure-postgres-password

# Cache
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
MEMORY_CACHE_SIZE=1000
CACHE_TTL=3600

# Modèle Ollama
OLLAMA_HOST=http://host.docker.internal:11434
POLYAD_MODEL=gemma3:12b-it-q4_K_M

# Sécurité
JWT_SECRET=polyad_secure_jwt_token_for_production_2025
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Surveillance et Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30

# Ressources
MAX_PARALLEL_TASKS=4
TASK_TIMEOUT=300
CPU_LIMIT=0.8
MEMORY_LIMIT=0.8

# Grafana
GRAFANA_PASSWORD=your-secure-grafana-password

# Clients externes
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
